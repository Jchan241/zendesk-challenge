<div class="ticket-wrapper my-3">
  <h1 class="mb-5">Zendesk Ticket Viewer</h1>
  <%= will_paginate @tickets %>
  <% @tickets.each do |ticket| %>
    <div class="card d-flex">
      <div class="card-body d-flex">
        <p><%= ticket.id %>.</p>
        <p class="ml-3"><%= ticket.subject %></p>
      </div>
      <%= link_to ticket_path(ticket.id), class: "ticket-link" do %>
      <% end %>
    </div>
  <% end %>

  <%= will_paginate @tickets %>
</div>
