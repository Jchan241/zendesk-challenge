<div class="ticket-wrapper my-3">
  <h1 class="mb-5">Zendesk Ticket Viewer</h1>

  <div class="tickets-container my-3">
    <% @tickets.each do |ticket| %>
      <div class="card-body d-flex border-bottom ticket">
        <p><%= ticket.id %>.</p>
        <p class="ml-3"><%= ticket.subject %></p>
        <%= link_to ticket_path(ticket.id), class: "ticket-link", id: ticket.id do %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= will_paginate @tickets, class: "apple_pagination" %>
</div>
